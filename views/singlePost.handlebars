<div class="p-5 bg-gray-100 rounded-lg shadow flex flex-col">
  <div class="mb-5  flex justify-between">
    <div class="">
      <h2 class="text-2xl">{{{get_emoji}}} {{post.title}}</h2>
      <p class="text-gray-600">{{post.user.name}}</p>
    </div>
    <div class="">
      <p class="text-sm text-gray-600">{{post.formattedDate}}</p>
    </div>
  </div>
  <p class="py-5 border-y border-gray-300"> {{post.body}}</p>
  <div class="mt-5 flex flex-col items-start">
      <h3 class="text-gray-600">Comments</h3>
        <form class=" w-full flex" data-id="{{post.id}}" id="comment-form">
          <div class="w-96 form-group">
            <input class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-l-lg block w-full p-2.5 " type="text" id="add-comment" placeholder="write a comment"/>
          </div>
          <div class="form-group">
            <button class="p-2.5 bg-blue-400 border border-blue-500 rounded-r-lg text-sm" type="submit">add comment</button>
          </div>
        </form>
      {{#each post.comments as |comment|}}
        <div class="mb-2 py-2 px-5 border border-gray-200 rounded-lg bg-gray-50 flex flex-col">
          <span class="text-sm text-grayy-600 font-bold"> {{comment.user.name}}</span>
          <span class="text-xs text-gray-400"> {{comment.formattedDate}}</span>
          <span> {{comment.body}}</span>
        </div>
      {{/each}}
  </div>

</div>

<script src="/js/createComment.js"></script>